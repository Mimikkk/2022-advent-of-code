{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "moduleResolution": "node",
    "types": [
      "vitest/globals"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.stories.*",
    "src/utils/storybook",
    "node_modules"
  ]
}
